<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item_user_profile_text_option">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/item_user_profile_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color5</item>
        <item name="android:textSize">@dimen/type2</item>
    </style>

    <style name="item_user_profile_edit_option">
        <item name="android:layout_width">@dimen/item_user_profile_edt_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/item_user_profile_text_margin_right</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color5</item>
        <item name="android:textSize">@dimen/type2</item>
    </style>

    <style name="item_user_profile_multi_text_option">
        <item name="android:layout_width">@dimen/item_user_profile_edt_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/item_user_profile_text_margin_right</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color5</item>
        <item name="android:textSize">@dimen/type2</item>
    </style>

    <style name="item_user_profile_icon_option">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="texttitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.35dip</item>
        <item name="android:background">#d9d9d9</item>
    </style>


    <style name="layout_option_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/seletor_profile</item>
    </style>

    <style name="layout_tag_container_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/seletor_profile</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>

    <style name="tag_container_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:clickable">true</item>
        <item name="container_background_color">@color/color0</item>
        <item name="container_border_color">@color/color0</item>
        <item name="container_enable_drag">false</item>
        <item name="horizontal_interval">10dp</item>
        <item name="vertical_interval">10dp</item>
        <item name="tag_clickable">false</item>
        <item name="tag_corner_radius">5dp</item>
        <item name="tag_theme">none</item>
    </style>

    <style name="profile_ic_styles">
        <item name="android:layout_width">@dimen/profile_tag_ic_width</item>
        <item name="android:layout_height">@dimen/profile_tag_ic_width</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/profile_ic_margin_right</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="profile_plus_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/profile_plus_margin_right</item>
        <item name="android:text">+</item>
    </style>

    <style name="profile_tv_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/type2</item>
    </style>

    <style name="account_layout_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/seletor_profile</item>
    </style>

    <style name="account_tv_title_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/type1</item>
        <item name="android:textColor">@color/color5</item>
    </style>

    <style name="account_tv_content_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/type3</item>
        <item name="android:textColor">@color/color6</item>
    </style>

    <style name="input_area_ic_styles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="expand_menu_ic_styles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="tutorial_menu_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/seletor_profile</item>
        <item name="android:textColor">@color/color_tv_gray</item>
    </style>V

    <style name="tutorial_placeholder_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="setting_layout_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/seletor_profile</item>
    </style>

    <style name="setting_tv_title_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/type1</item>
        <item name="android:textColor">@color/color5</item>
    </style>

    <style name="setting_tv_content_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/type2</item>
        <item name="android:textColor">@color/color6</item>
    </style>

    <style name="setting_ic_styles">
        <item name="android:layout_width">@dimen/profile_tag_ic_width</item>
        <item name="android:layout_height">@dimen/profile_tag_ic_width</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/profile_ic_margin_right</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="setting_ic_jump">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
